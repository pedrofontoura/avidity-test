<h1 class="text-center mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white"> <%= @story.title %> </h1>
<p class="mb-6 mt-6 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400"> <%= @story.description %> </p>

<div class="grid grid-cols-3 gap-0 gap-y-8 mx-20 mt-10">
    <% @characters.each do |character| %>
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
            <a href="#">
                <%= image_tag((character.thumbnail.path << "." << character.thumbnail.extension), {:class => "rounded-t-lg"}) %>
            </a>
            <div class="p-5">
                <a href="#">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"> <%= character.name %> </h5>
                </a>
            </div>
        </div>
    <% end %>
</div>

<div class="mt-8 text-center">
    <%= raw(@attribution) %>
</div>